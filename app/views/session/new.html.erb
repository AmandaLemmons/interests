<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @user do |f| %>
      <%= f.input :username %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation, label:false %>
      <%= f.submit  %>
    <% end %>
  </div>
</div>

<p> Don't have an account? <%= link_to 'Sign up here', sign_up_path %>
