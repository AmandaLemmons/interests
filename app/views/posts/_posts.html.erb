<% @posts.each do |post| %>
  <div class="col-md-3">
    <%= link_to open_photo_modal_path(id: post.id), remote: true do %>
      <%= image_tag post.photo, class:"img-responsive img-thumbnail"%>
    <%end %>
  </div>
<% end %>

